{
  "name": "@gibme/timer",
  "version": "1.0.12",
  "description": "A simple timer/metronome",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yarn build:typescript",
    "build:docs": "./node_modules/.bin/typedoc",
    "build:typescript": "./node_modules/.bin/tsc",
    "build:webpack": "./node_modules/.bin/auto-pack",
    "test": "yarn test:style && yarn test:typecheck && yarn test:mocha",
    "test:typecheck": "./node_modules/.bin/tsc --noEmit",
    "test:style": "yarn style",
    "test:mocha": "./node_modules/.bin/mocha --exit --timeout 30000 --require ts-node/register test/test.ts",
    "style": "./node_modules/.bin/eslint src/**/*.ts test/**/*.ts",
    "fix-style": "./node_modules/.bin/eslint --fix src/**/*.ts test/**/*.ts",
    "fix:style": "yarn fix-style",
    "prepublishOnly": "yarn build && yarn build:webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gibme-npm/timer.git"
  },
  "bugs": {
    "url": "https://github.com/gibme-npm/timer/issues"
  },
  "homepage": "https://gibme-npm.github.io/timer/",
  "engines": {
    "node": ">=16"
  },
  "engineStrict": true,
  "author": {
    "name": "Brandon Lehmann",
    "email": "brandonlehmann@gmail.com"
  },
  "webpack": {
    "entry": {
      "timer": "./src/index.ts"
    },
    "filename": "[name].min.js"
  },
  "devDependencies": {
    "@gibme/auto-pack": "^0.4.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.7",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.2.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  }
}
